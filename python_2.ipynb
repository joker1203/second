    " \n",
    "while n != 1:\n",
    "    if n % 2 == 0:\n",
    "        k = n / 2\n",
    "        print(\"%d=%d/2\" %(k, n))\n",
    "        n = k\n",
    "    else:\n",
    "        l = n * 3 + 1\n",
    "        print(\"%d=%d*3+1\" %(n, l))\n",
    "        n=l"
